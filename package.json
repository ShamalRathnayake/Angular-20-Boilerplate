{
  "name": "Angular 20 Boilerplate",
  "version": "0.0.0",
  "author": {
    "name": "Shamal Rathnayake"
  },
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "cross-env NODE_ENV=development ng serve",
    "prestart": "cross-env NODE_ENV=development node ./validate-env.mjs",
    "build": "cross-env NODE_ENV=production ng build",
    "prebuild": "cross-env NODE_ENV=production node ./validate-env.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,md,json}\"",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "lint-staged": {
    "src/**/*.{ts,html,css,scss}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@tailwindcss/postcss": "^4.1.12",
    "ngx-toastr": "^19.0.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ngx-env/builder": "^20.1.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.3.0",
    "angular-eslint": "20.2.0",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
